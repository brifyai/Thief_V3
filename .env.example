# ============================================
# CONFIGURACIÓN UNIFICADA - AI SCRAPER
# ============================================

# ============================================
# BACKEND - Variables de Entorno
# ============================================

# Puerto del servidor backend
BACKEND_PORT=3000

# Base de datos (ya no se usa con Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/scraper_db

# Supabase
SUPABASE_URL=https://vdmbvordfslrpnbkozig.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Redis (para caché y queue)
REDIS_URL=redis://localhost:6379

# APIs Externas
GROQ_API_KEY=your_groq_api_key_here

# Configuración de CORS
CORS_ORIGIN=http://localhost:3001

# Modo de ejecución
NODE_ENV=development

# Logging
LOG_LEVEL=info

# ============================================
# FRONTEND - Variables de Entorno
# ============================================

# URL de la API del backend
# ⚠️ IMPORTANTE: NO incluir /api al final
# El frontend agrega automáticamente /api en cada endpoint
# Correcto: http://localhost:3000
# Incorrecto: http://localhost:3000/api
NEXT_PUBLIC_API_URL=http://localhost:3000

# Modo de ejecución
NEXT_PUBLIC_ENV=development

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Copia este archivo a .env en la raíz del proyecto
# 2. Copia backend/.env.example a backend/.env
# 3. Copia frontend/.env.example a frontend/.env.local
# 4. Actualiza los valores según tu configuración local
# 5. NUNCA commits archivos .env a git